        </div>
      </div>
      <script>window.userId = {{user.id}};</script>
      <script src="/js/mood.js"></script>
    </section>
    <section class="vitals">
      <h2>Vitals</h2>
      <div class="register-box">
        <form id="vitals-form">
          <label for="age">Age</label>
          <input
            type="number"
            id="age"
            name="age"
            disabled
            placeholder="Enter your age"
          />

          <label for="height">Height (cm)</label>
          <input
            type="number"
            id="height"
            name="height"
            disabled
            placeholder="Enter your height"
          />

          <label for="weight">Weight (kg)</label>
          <input
            type="number"
            id="weight"
            name="weight"
            disabled
            placeholder="Enter your weight"
          />
          <label for="rhr">Resting heart rate (bpm)</label>
          <input
            type="number"
            id="rhr"
            name="rhr"
            disabled
            placeholder="Enter your resting heart rate"
          />
          <label for="bmi">Body Mass Index</label>
          <input type="number" id="bmi" name="bmi" disabled />

          <button type="button" id="edit-btn"><i
              class="fa-solid fa-pen-to-square"
            ></i>
            Edit</button>
        </form>
        <p id="bmi-warning" style="color: red; font-weight: bold;"></p>
        <p id="rhr-warning" style="color: red; font-weight: bold;"></p>
      </div>

      <script src="/js/vitals.js"></script>

      <footer>
        All rights reserved
      </footer>
    </section>
  </body>
</html>